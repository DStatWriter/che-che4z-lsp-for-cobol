if [ $# -gt 0 ]
  then
        docker stop cobol-lsp-remote || echo "cannot stop"
        docker rm cobol-lsp-remote || echo "does not exist"
        docker pull czprapd-registry.mcl.broadcom.net:443/cobol-lsp-remote:$1 && docker run --name cobol-lsp-remote -d -t -p 0.0.0.0:1044:1044 czprapd-registry.mcl.broadcom.net:443/cobol-lsp-remote:$1
else
 echo "Use image tag for image czprapd-registry.mcl.broadcom.net:443/cobol-lsp-remote as paramater"
 echo "Example: lspdeploy development"
fi